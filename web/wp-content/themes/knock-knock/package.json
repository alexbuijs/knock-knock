{
  "name": "@knock-knock/theme",
  "version": "0.1.0",
  "description": "Knock Knock, a Cohousing Intranet Wordpress Theme",
  "scripts": {
    "start": "APP_ENV=development vite",
    "build": "APP_ENV=production vite build",
    "test": "npm run stylelint && npm run eslint",
    "stylelint": "stylelint 'assets/scss/**/*.scss'",
    "eslint": "eslint 'assets/js/**/*'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/alexbuijs/knock-knock.git"
  },
  "keywords": [
    "wordpress",
    "theme",
    "cohousing"
  ],
  "browserslist": {
    "production": [
      "defaults"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "author": "Klopvaart Internet Team",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/alexbuijs/knock-knock/issues"
  },
  "homepage": "https://github.com/alexbuijs/knock-knock#readme",
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "customSyntax": "postcss-scss"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:react/recommended",
      "prettier"
    ],
    "plugins": [
      "react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@vitejs/plugin-legacy": "^5.3.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "axios": "^1.6.8",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^17.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "postcss-scss": "^4.0.9",
    "sass": "^1.75.0",
    "stylelint": "^16.4.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "terser": "^5.30.4",
    "vite": "^5.2.10"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-brands-svg-icons": "^6.5.2",
    "@fortawesome/free-regular-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@popperjs/core": "^2.11.8",
    "@wordpress/dom-ready": "^3.56.0",
    "bootstrap": "^5.3.3",
    "delicious-hamburgers": "^1.2.3",
    "flatpickr": "^4.6.13",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
