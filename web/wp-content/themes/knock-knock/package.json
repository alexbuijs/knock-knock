{
  "name": "@knock-knock/theme",
  "version": "0.1.0",
  "description": "Knock Knock, a Cohousing Intranet Wordpress Theme",
  "scripts": {
    "start": "APP_ENV=development vite",
    "build": "APP_ENV=production vite build",
    "test": "npm run stylelint && npm run eslint",
    "stylelint": "stylelint 'assets/scss/**/*.scss'",
    "eslint": "eslint 'assets/js/**/*'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/alexbuijs/knock-knock.git"
  },
  "keywords": [
    "wordpress",
    "theme",
    "cohousing"
  ],
  "browserslist": {
    "production": [
      "defaults"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "author": "Klopvaart Internet Team",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/alexbuijs/knock-knock/issues"
  },
  "homepage": "https://github.com/alexbuijs/knock-knock#readme",
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "customSyntax": "postcss-scss"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:react/recommended",
      "prettier"
    ],
    "plugins": [
      "react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.14",
    "axios": "^1.4.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.1",
    "postcss-scss": "^4.0.6",
    "sass": "^1.64.2",
    "stylelint": "^15.10.2",
    "stylelint-config-standard-scss": "^10.0.0",
    "terser": "^5.19.2",
    "vite": "^4.4.9"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.4.2",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/free-regular-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@popperjs/core": "^2.11.8",
    "@wordpress/dom-ready": "^3.38.0",
    "bootstrap": "^5.3.1",
    "delicious-hamburgers": "^1.2.3",
    "flatpickr": "^4.6.13",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
