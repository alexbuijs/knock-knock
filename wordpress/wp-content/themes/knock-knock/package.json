{
  "name": "knock-knock",
  "version": "0.1.0",
  "description": "Knock Knock, a Cohousing Intranet Wordpress Theme",
  "scripts": {
    "start": "npm run dev",
    "dev": "NODE_ENV=development webpack",
    "build": "npm run production",
    "prod": "npm run production",
    "production": "NODE_ENV=production npm run clean && webpack",
    "clean": "rimraf dist",
    "test": "npm-run-all stylelint eslint",
    "stylelint": "stylelint 'assets/scss/**/*.scss'",
    "stylelint:fix": "stylelint 'assets/scss/**/*.scss' --fix",
    "eslint": "eslint 'assets/js/**'",
    "eslint:fix": "eslint 'assets/js/**' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/alexbuijs/knock-knock.git"
  },
  "keywords": [
    "wordpress",
    "theme",
    "cohousing"
  ],
  "browserslist": {
    "production": [
      "defaults"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "author": "Klopvaart Internet Team",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/alexbuijs/knock-knock/issues"
  },
  "homepage": "https://github.com/alexbuijs/knock-knock#readme",
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "max-nesting-depth": 3
    },
    "ignoreFiles": [
      "dist/**/*"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-uses-react": 1,
      "indent": [
        "error",
        4
      ]
    },
    "settings": {
      "react": {
        "version": "latest"
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@fullhuman/postcss-purgecss": "^4.0.0",
    "assets-webpack-plugin": "^7.0.0",
    "autoprefixer": "^10.1.0",
    "axios": "^0.21.1",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^10.0.0",
    "browser-sync": "^2.26.12",
    "browser-sync-webpack-plugin": "^2.2.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "glob-all": "^3.2.1",
    "mini-css-extract-plugin": "^1.3.3",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^4.0.1",
    "purgecss-webpack-plugin": "^4.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.0",
    "sass-loader": "^10.0.2",
    "stylelint": "^13.7.1",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-webpack-plugin": "^2.1.0",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-manifest-plugin": "^3.0.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "@babel/runtime-corejs3": "^7.11.2",
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-regular-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@popperjs/core": "^2.6.0",
    "@wordpress/dom-ready": "^2.10.0",
    "bootstrap": "^5.0.0-beta1",
    "delicious-hamburgers": "^1.1.0",
    "flatpickr": "^4.6.6",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
